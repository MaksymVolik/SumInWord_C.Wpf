<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Стиль для Thumb (повзунка) -->
    <Style x:Key="CustomScrollBarThumbStyle" TargetType="{x:Type Thumb}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border x:Name="ThumbBorder"
                            Background="{StaticResource AccentBrush}" 
                            Width="10" Height="auto"
                            CornerRadius="0"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsDragging" Value="True">
                            <Setter TargetName="ThumbBorder" Property="Background" Value="{StaticResource AccentPressedBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для невидимих RepeatButton (між Thumb і краями) -->
    <Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="IsTabStop" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Rectangle Fill="Transparent"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для кнопок зі стрілками -->
    <Style x:Key="ScrollBarLineButton" TargetType="{x:Type RepeatButton}">
        <Setter Property="Focusable" Value="false"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RepeatButton}">
                    <Border x:Name="Border"
                        Background="{StaticResource SecondaryBackgroundBrush}"
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="1">
                        <Path x:Name="Arrow"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Fill="{StaticResource AccentBrush}"
                          Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource BackgroundBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentPressedBrush}"/>
                            <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource BackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Основний стиль ScrollBar -->
    <Style TargetType="{x:Type ScrollBar}">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Style.Triggers>
            <!-- Вертикальний ScrollBar -->
            <Trigger Property="Orientation" Value="Vertical">
                <Setter Property="Width" Value="14"/>
                <!-- Ширина треку -->
                <Setter Property="Height" Value="Auto"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <!-- Висота верхньої кнопки (стандартна 18) -->
                                    <RowDefinition Height="12"/>
                                    <RowDefinition Height="*"/>
                                    <!-- Висота нижньої кнопки -->
                                    <RowDefinition Height="12"/>
                                </Grid.RowDefinitions>

                                <!-- Кнопка вгору -->
                                <RepeatButton Grid.Row="0"
                                        Style="{StaticResource ScrollBarLineButton}"
                                        Command="ScrollBar.LineUpCommand"
                                        Content="M 0 4 L 4 0 L 8 4 Z"/>

                                <!-- Трек -->
                                <Border Grid.Row="1" 
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    BorderBrush="{StaticResource AccentBrush}" 
                                    BorderThickness="1,0,1,0">
                                    <Track x:Name="PART_Track"
                                       IsDirectionReversed="true">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource ScrollBarPageButton}" 
                                                    Command="ScrollBar.PageUpCommand"/>
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Style="{StaticResource CustomScrollBarThumbStyle}"/>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource ScrollBarPageButton}" 
                                                    Command="ScrollBar.PageDownCommand"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Border>

                                <!-- Кнопка вниз -->
                                <RepeatButton Grid.Row="2"
                                        Style="{StaticResource ScrollBarLineButton}"
                                        Command="ScrollBar.LineDownCommand"
                                        Content="M 0 0 L 4 4 L 8 0 Z"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <!-- Горизонтальний ScrollBar -->
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Width" Value="Auto"/>
                <Setter Property="Height" Value="16"/>
                <!-- Висота треку -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="18"/>
                                    <!-- Ширина лівої кнопки -->
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="18"/>
                                    <!-- Ширина правої кнопки -->
                                </Grid.ColumnDefinitions>

                                <!-- Кнопка вліво -->
                                <RepeatButton Grid.Column="0"
                                        Style="{StaticResource ScrollBarLineButton}"
                                        Command="ScrollBar.LineLeftCommand"
                                        Content="M 4 0 L 0 4 L 4 8 Z"/>

                                <!-- Трек -->
                                <Border Grid.Column="1" 
                                    Background="{StaticResource SecondaryBackgroundBrush}"
                                    BorderBrush="{StaticResource AccentBrush}" 
                                    BorderThickness="0,1,0,1">
                                    <Track x:Name="PART_Track"
                                       IsDirectionReversed="false">
                                        <Track.DecreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource ScrollBarPageButton}" 
                                                    Command="ScrollBar.PageLeftCommand"/>
                                        </Track.DecreaseRepeatButton>
                                        <Track.Thumb>
                                            <Thumb Style="{StaticResource CustomScrollBarThumbStyle}"/>
                                        </Track.Thumb>
                                        <Track.IncreaseRepeatButton>
                                            <RepeatButton Style="{StaticResource ScrollBarPageButton}" 
                                                    Command="ScrollBar.PageRightCommand"/>
                                        </Track.IncreaseRepeatButton>
                                    </Track>
                                </Border>

                                <!-- Кнопка вправо -->
                                <RepeatButton Grid.Column="2"
                                        Style="{StaticResource ScrollBarLineButton}"
                                        Command="ScrollBar.LineRightCommand"
                                        Content="M 0 0 L 4 4 L 0 8 Z"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>